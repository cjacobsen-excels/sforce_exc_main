<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>56.0</apiVersion>
    <description>The flow is used to calculate the &quot;SECOND&quot; payment generation date. This is used to calculate the compensation if the number of students went up</description>
    <environments>Default</environments>
    <formulas>
        <description>This formula should calculate the payment Date +14 days from the term start date if the number of students increased</description>
        <name>CalculatepaymentDate</name>
        <dataType>Date</dataType>
        <expression>{!$Record.hed__Start_Date__c} + 15</expression>
    </formulas>
    <formulas>
        <description>Payment Calculations will stop after this date</description>
        <name>CalculationStopDate</name>
        <dataType>Date</dataType>
        <expression>{!$Record.hed__Start_Date__c} + 17</expression>
    </formulas>
    <interviewLabel>RT-U-AS-Payment Calculation Date {!$Flow.CurrentDateTime}</interviewLabel>
    <label>RT-U-AS-Payment Calculation Date</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>FREE_FORM_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>It should update Payment Calculation Date after 15 days if Number of student is changed</description>
        <name>Update_Payment_Calculation_Date</name>
        <label>Update Payment Calculation Date</label>
        <locationX>773</locationX>
        <locationY>412</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Bi_weekly_payments_start__c</field>
            <operator>LessThanOrEqualTo</operator>
            <value>
                <elementReference>$Flow.CurrentDate</elementReference>
            </value>
        </filters>
        <filters>
            <field>Number_of_Students_Registered_on_Day_4__c</field>
            <operator>LessThan</operator>
            <value>
                <elementReference>$Record.Number_of_Students_Registered__c</elementReference>
            </value>
        </filters>
        <filters>
            <field>hed__Start_Date__c</field>
            <operator>LessThanOrEqualTo</operator>
            <value>
                <elementReference>CalculationStopDate</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>Bi_weekly_payments_start__c</field>
            <value>
                <elementReference>CalculatepaymentDate</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>632</locationX>
        <locationY>48</locationY>
        <connector>
            <targetReference>Update_Payment_Calculation_Date</targetReference>
        </connector>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Bi_weekly_payments_start__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Number_of_Students_Registered__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Exclude_from_Adjunct_Off_Load_Processes__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>hed__Start_Date__c</field>
            <operator>IsNull</operator>
            <value>
                <booleanValue>false</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Status__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Active</stringValue>
            </value>
        </filters>
        <filters>
            <field>First_Payment_Calculated__c</field>
            <operator>EqualTo</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>hed__Course_Offering__c</object>
        <recordTriggerType>Update</recordTriggerType>
        <triggerType>RecordAfterSave</triggerType>
    </start>
    <status>Obsolete</status>
</Flow>
